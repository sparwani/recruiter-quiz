# .env.example
# Example environment variables for the Recruiter Quiz App.
# Copy this file to .env and fill in your actual values.
# DO NOT commit your .env file to version control.

# Server Configuration
PORT=3000

# PostgreSQL Database Connection
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=recruiter_quiz_db

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Names (ensure these are valid models you have access to)
# Used by Admin panel for generating questions
OPENAI_QUESTION_GENERATION_MODEL=gpt-4-turbo-preview
# Used by Quiz flow for grading free-text answers
OPENAI_GRADING_MODEL=gpt-3.5-turbo 